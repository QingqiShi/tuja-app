{
  "name": "tuja",
  "author": "Qingqi Shi (qingqishi@live.com)",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "commit": "yarn run git-cz",
    "start": "run-p dev emulate",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build",
    "build:functions": "lerna run build --scope @tuja/libs --scope @tuja/functions",
    "lint": "lerna run lint",
    "test": "start-test 'firebase emulators:start --only firestore --import=testData' 4000 'jest --no-cache --watch --coverage'",
    "test:ci": "start-test 'firebase emulators:start --only firestore --import=testData' 4000 'CI=true jest --coverage'",
    "emulate": "firebase emulators:start --only firestore,pubsub,functions --import=testData --inspect-functions",
    "emulator:export": "firebase emulators:export ./testData",
    "shell": "firebase functions:shell",
    "analyze": "lerna run analyze",
    "predeploy": "lerna run predeploy",
    "postdeploy": "lerna run postdeploy",
    "postinstall": "husky install"
  },
  "engines": {
    "node": "12"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "d3-array": "^2.11.0",
    "dayjs": "^1.10.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@cloudflare/wrangler": "^1.13.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.6.3",
    "@types/d3-array": "^2.9.0",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.19.0",
    "firebase": "^8.2.6",
    "firebase-tools": "^9.3.0",
    "husky": "^5.0.9",
    "lerna": "^3.21.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.12.0",
    "typescript": "^4.1.5"
  },
  "resolutions": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1"
  },
  "lint-staged": {
    "packages/app/src/**/*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx --fix",
      "prettier --single-quote --write"
    ],
    "packages/components/src/**/*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx --fix",
      "prettier --single-quote --write"
    ],
    "packages/functions/src/**/*.{ts}": [
      "eslint",
      "prettier --single-quote --write"
    ],
    "packages/workers/src/**/*.{ts}": [
      "eslint",
      "prettier --single-quote --write"
    ],
    "packages/*/src/**/*.{json,css,scss,md}": [
      "prettier --single-quote --write"
    ],
    "*.json": [
      "prettier --single-quote --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
