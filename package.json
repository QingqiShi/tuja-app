{
  "name": "tuja-app",
  "author": "Qingqi Shi (qingqishi@live.com)",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "commit": "yarn run git-cz",
    "start": "run-p dev emulate",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build --parallel",
    "lint": "lerna run lint --parallel",
    "emulate": "firebase emulators:start --only firestore,pubsub,functions --import=testData",
    "shell": "firebase functions:shell"
  },
  "engines": {
    "node": "12"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "firebase": "^7.15.3",
    "firebase-tools": "^8.7.0",
    "google-auth-library": "^6.0.2",
    "google-gax": "^2.6.1",
    "husky": "^4.2.5",
    "lerna": "^3.21.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx --fix",
      "prettier --single-quote --write"
    ],
    "packages/*/src/**/*.{json,css,scss,md}": [
      "prettier --single-quote --write"
    ],
    "*.json": [
      "prettier --single-quote --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
