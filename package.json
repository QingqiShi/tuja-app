{
  "name": "tuja",
  "author": "Qingqi Shi (qingqishi@live.com)",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "commit": "yarn run git-cz",
    "start": "run-p dev emulate",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "emulate": "firebase emulators:start --only firestore,pubsub,functions --import=testData",
    "emulator:export": "firebase emulators:export ./testData",
    "shell": "firebase functions:shell",
    "analyze": "lerna run analyze"
  },
  "engines": {
    "node": "12"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^5.1.4",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "firebase": "^8.1.1",
    "firebase-tools": "^8.16.2",
    "husky": "^4.3.0",
    "lerna": "^3.21.0",
    "lint-staged": "^10.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "typescript": "^4.0.5"
  },
  "resolutions": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/app/src/**/*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx --fix",
      "prettier --single-quote --write"
    ],
    "packages/components/src/**/*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx --fix",
      "prettier --single-quote --write"
    ],
    "packages/functions/src/**/*.{ts}": [
      "tslint --project tsconfig.json",
      "prettier --single-quote --write"
    ],
    "packages/*/src/**/*.{json,css,scss,md}": [
      "prettier --single-quote --write"
    ],
    "*.json": [
      "prettier --single-quote --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
