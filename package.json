{
  "name": "tuja-app",
  "author": "Qingqi Shi (qingqishi@live.com)",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "commit": "yarn run git-cz",
    "start": "run-p dev emulate",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build --parallel",
    "lint": "lerna run lint --parallel",
    "emulate": "firebase emulators:start --only firestore,pubsub,functions --import=testData",
    "emulator:export": "firebase emulators:export ./testData",
    "shell": "firebase functions:shell"
  },
  "engines": {
    "node": "12"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "firebase": "^7.21.1",
    "firebase-tools": "^8.11.0",
    "google-auth-library": "^6.1.0",
    "google-gax": "^2.9.0",
    "husky": "^4.3.0",
    "lerna": "^3.21.0",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/app/src/**/*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx --fix",
      "prettier --single-quote --write"
    ],
    "packages/functions/src/**/*.{ts}": [
      "tslint --project tsconfig.json",
      "prettier --single-quote --write"
    ],
    "packages/*/src/**/*.{json,css,scss,md}": [
      "prettier --single-quote --write"
    ],
    "*.json": [
      "prettier --single-quote --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
